<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns:fx="http://javafx.com/fxml" styleClass="dialog-pane">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Common Furniture Properties -->
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            
            <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            
            <Label text="Material:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="materialField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            
            <Label text="Manufacturer:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="manufacturerField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            
            <Label text="Wood Type:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <ComboBox fx:id="woodTypeComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            
            <!-- Sofa-specific Properties -->
            <Label text="Seating Capacity:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <Spinner fx:id="seatingCapacitySpinner" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            
            <Label text="Is Convertible:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <CheckBox fx:id="isConvertibleCheckBox" GridPane.rowIndex="6" GridPane.columnIndex="1" />
            
            <Label text="Upholstery Type:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
            <ComboBox fx:id="upholsteryTypeComboBox" GridPane.rowIndex="7" GridPane.columnIndex="1" />
            
            <Label text="Number of Cushions:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
            <Spinner fx:id="numberOfCushionsSpinner" GridPane.rowIndex="8" GridPane.columnIndex="1" />
            
            <Label text="Has Recliners:" GridPane.rowIndex="9" GridPane.columnIndex="0" />
            <CheckBox fx:id="hasReclinersCheckBox" GridPane.rowIndex="9" GridPane.columnIndex="1" />
        </GridPane>
    </content>
    
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>